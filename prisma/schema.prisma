// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model sentences {
  id        Int       @id @default(autoincrement())
  words     String    @unique
  ratings   ratings[]
  source    sources   @relation(fields: [source_id], references: [id])
  source_id Int
  deleted   Boolean   @default(false)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt @default(now())
}

model sources {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  sentences sentences[]
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt @default(now())
}

model raters {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  ratings   ratings[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt @default(now())
}

model tags {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  ratings   ratings[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt @default(now())
}

model ratings {
  id          Int       @id @default(autoincrement())
  rater       raters    @relation(fields: [rater_id], references: [id])
  rater_id    Int
  sentence    sentences @relation(fields: [sentence_id], references: [id])
  sentence_id Int
  tag         tags      @relation(fields: [tag_id], references: [id])
  tag_id      Int
  explanation String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt @default(now())
}
